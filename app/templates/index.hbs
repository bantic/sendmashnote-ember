<div id="note">

  <div id="emailbox">
    <span id="email">a note to: </span>
    {{input id='emailinput' type='email' value=email}}
  </div> <!-- closing emailbox -->

  <div id="notebox">
    {{textarea value=text id="writenote" maxlength="500" placeholder="I hope you know how much your work is respected. I was at a dinner party last week and overheard two people we loosely know talking about how brilliant a writer you are. Have you been writing? You should. Please put your words out into the world again. I'd love to see you start up your blog again."}}
    <p id="charcount"></p>
  </div> <!-- closing notebox -->
  
  <div id="dynamicPrompt">
		Positivity is contagious
	</div>
	
  <div id="sendarea">
    <div id="checksend">

      <div class="checkInput">
        <input type="checkbox" name="checkInput" value="1" id="checkInputOne">
        <label for="checkInputOne"></label>
      </div> <!-- closing checkInput -->

      <span id="checkCopy">Send a copy to myself</span>

    </div> <!-- closing checksend -->

    {{#if session.signedIn}}
      <button id="sendnote" {{action 'sendMessage'}}>Send Note</button>
    {{else}}
      <button {{action 'signIn'}}>Connect with Facebook first before sending</button>
    {{/if}}

  </div> <!-- closing sendarea -->

</div> <!-- closing note -->

